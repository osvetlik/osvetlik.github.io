root = true

[*]
charset = utf-8

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
max_line_length = 120

[*.html]
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120
indent_style = tab
indent_size = 2

[*.scss]
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120
indent_style = tab
indent_size = 2
